<div class="row">
    {{#each images}}
      <div class="col-sm-12 col-md-4 col-lg-3">
          <div class="card mt-2">
              <div class="card-header">
                  <h4>{{title}}</h4>
              </div>
              <div class="card-body">
                  <a href="/images/{{_id}}"><img src="{{imageURL}}" width="100%" height="250px"></a>
              </div>
              <div class="card-footer">
                  <p>{{description}}</p>
                  <a href="/images/delete/{{_id}}" class="btn btn-sm bg-danger btn-block" style="color: white;">DELETE</a>
              </div>
          </div>
      </div>
    {{/each}}
</div>